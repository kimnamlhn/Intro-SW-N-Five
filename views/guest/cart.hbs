 {{#section 'footer'}}
   <script>
       $('.removeCourse').on('click', function () {
    const id = $(this).data('id');
    $('#IdKhoaHoc').val(id);
    $('#frmRemoverCourse').submit();
  });
   </script>
{{/section}}
 <div class="container">

        <!--Section: Block Content-->
        <section class="mt-5 mb-4">
  
          <!--Grid row-->
          <div class="row">
  
            <!--Grid column-->
            <div class="col-lg-8">
  
              <!-- Card -->
              <div class="card wish-list mb-4">
                <div class="card-body">
  
                  <h5 class="mb-4">Cart (<span>{{nCourse}}</span> khóa học)</h5>
                  <!--List cart-->
                  <div>
                     <!--Course-->
                      <form action="/cart/remove" method="post" id="frmRemoverCourse">
                        <input type="hidden" name="IdKhoaHoc" id="IdKhoaHoc">
                      </form>
                     {{#each cartList}}
                     {{#with  detCourse}}
                        
                        <div class="row p-2 bg-white border rounded mt-2">
                        <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image" src="../img/onlCourse.jpg"></div>
                        <div class="col-md-5 mt-1">
                            <h5>{{TenKhoaHoc}}</h5>
                            <div class="d-flex flex-row">
                            </div>
                        <p class="text-justify text-truncate para mb-0">{{MoTaChiTiet}}<br><br></p>
                        <h6><span class="font-weight-bold">Teacher: </span>{{TenGiangVien}}</h6>
                        </div>
                        <div class="col-md-4 border-left mt-1">
                            <div class="d-flex flex-row align-items-center text-dark">
                                <i class="fa fa-user" aria-hidden="true"></i> <span>Số học viên: {{SoLuongHVDangKy}}</span>

                            </div>
                             <div class="d-flex flex-row align-items-center text-dark">
                                <i class="fa fa-eye" aria-hidden="true"></i> <span> Số lượt xem: {{SoLuotXem}}</span>

                            </div>
                           
                            <div class="d-flex justify-content-center mt-4"><button class="btn btn-primary btn-sm" type="button">Add to wishlist</button><a data-id="{{IdKhoaHoc}}" href="javascript:;" role="button" class="btn btn-outline-danger btn-sm mt-2 removeCourse" type="button">REMOVE</a></div>
                        </div>
                    </div>
                    {{/with}}
                     {{/each}}
                    
                    <!--End course .//-->
                  </div>
                  <!--List cart .//-->
                   
                    
                  <hr class="mb-4">
                  <p class="text-primary mb-0"><i class="fas fa-info-circle mr-1"></i> Sau khi enroll chờ admin duyệt khóa học, bạn có thể tham gia các khóa học với tư cách học viên</p>
  
                </div>
              </div>
              <!-- Card -->
  
            </div>
            <!--Grid column-->
  
            <!--Grid column-->
            <div class="col-lg-4">
  
              <!-- Card -->
              <div class="card mb-4">
                <div class="card-body">
  
                  <h5 class="mb-3">Enroll</h5>
                    <div class="d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                        Bạn chắc chắn muốn đăng kí tất cả khóa học này?
                    </div>
                 
                  <button type="button" class="btn btn-danger btn-block waves-effect waves-light">Enroll all</button>
  
                </div>
              </div>
            </div>
            <!--Grid column-->
  
          </div>
          <!--Grid row-->
  
        </section>
        <!--Section: Block Content-->
  
      </div>